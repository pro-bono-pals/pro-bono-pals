<div>
    <nav id="reciever-dashboard-nav">
        <button class="signout-btn btn-primary">Sign Out</button>
        <h1>Welcome, {{ name }} </h1>
        <h6> Reciever Mode</h6>

    </nav>
</div>
<div id="dashboard-body">
    <div id="mypost-list">
        <div class="mypost">
            <button id="newpostbtn" class="completed-btn btn-primary">Make a NEW post</button>
            <h4> My Service Requests</h4>
            <div id="mypost-title">
                <p> Post Title: {{title of post}} </p>
            </div>
            <div id="mypost-username">
                <p> My Username:{{reciever username}} </p>
            </div>
            <div id="mypost-date">
                <p> Service must be completed by {{date}} </p>
            </div>
            <div id="mypost-location">
                <p> Service Location: {{location}} </p>
            </div>
            <div id="mypost-expertise">
                <p> Service Category: {{expertise categories}} </p>
            </div>
            <div id="mypost-description">
                <p> {{post}} </p>
                <button class="help-btn btn-primary">Accept Task</button>
            </div>
        </div>
    </div>
    <div class="currentcontainer">
        
        <div id="mycurrent-tasks">
            <h4>Current Task Info</h4>
            <div class="currentpost">
                <div id="currentpost-title">
                    <p> Service Needed: {{title of post}} </p>
                </div>
                <div id="currentpost-username">
                    <p> Reciever: {{reciever username}} is recieving your help. </p>
                </div>
                <div id="currentpost-date">
                    <p> Post Date: {{date}} </p>
                </div>
                <div id="currentpost-location">
                    <p> Service Location: {{location}} </p>
                </div>
                <div id="currentpost-expertise">
                    <p> Service Category: {{expertise categories}} </p>
                </div>
                <div id="currentpost-description">
                    <p> Service Description: {{post}} </p>
                    <!-- <button class="completed-btn btn-primary">Task Completed</button> -->
                </div>
            </div>
        </div>


    </div>