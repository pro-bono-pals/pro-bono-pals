<div>
    <nav id="reciever-dashboard-nav">
        <h1>Welcome, {{ name }} </h1>
        <h6> Reciever Mode</h6>

    </nav>
</div>
<div id="dashboard-body">
    <div id="mypost-list">
        <div class="mypost">
            <button id="make-post-btn" class="completed-btn btn-primary">Make a NEW post</button>
            <h4> My Service Requests</h4>
            <div id="mypost-title">
                <p> Post Title: {{task.name}} </p>
            </div>
            <div id="mypost-username">
                <p> My Username:{{name}} </p>
            </div>
            <div id="mypost-date">
                <p> Service must be completed by {{date}} </p>
            </div>
            <div id="mypost-location">
                <p> Service Location: {{location}} </p>
            </div>
            <div id="mypost-expertise">
                <p> Service Category: {{service.name}} </p>
            </div>
            <div id="mypost-description">
                <p> {{post}} </p>
            </div>
        </div>
    </div>
    <div class="currentcontainer">
        
        <div id="mycurrent-tasks">
            <h4>Current Task Info</h4>
            <div class="currentpost">
                <div id="currentpost-title">
                    <p> Service Needed: {{task.name}} </p>
                </div>
                <div id="currentpost-username">
                    <p> Reciever: {{name}} is recieving your help. </p>
                </div>
                <div id="currentpost-date">
                    <p> Post Date: {{date}} </p>
                </div>
                <div id="currentpost-location">
                    <p> Service Location: {{location}} </p>
                </div>
                <div id="currentpost-expertise">
                    <p> Service Category: {{service.name}} </p>
                </div>
                <div id="currentpost-description">
                    <p> Service Description: {{task.description}} </p>
                </div>
            </div>
        </div>


    </div>
<script src="./js/logout.js"></script>

